<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

        <service id="prezent_ink.factory" class="Prezent\InkBundle\Mail\TwigFactory" public="true">
            <argument type="service" id="twig" />
            <argument type="service" id="prezent_ink.inky" />
            <argument type="service" id="prezent_ink.inliner" />
        </service>

        <service id="prezent_ink.inky_component.inline_style" class="Prezent\InkBundle\Inky\InlineStyleComponentFactory">
            <argument type="service" id="kernel" />
            <tag name="prezent_ink.inky_component" />
        </service>

        <service id="Prezent\Inky\Inky" />
        <service id="Pelago\Emogrifier"/>

    </services>
</container>
